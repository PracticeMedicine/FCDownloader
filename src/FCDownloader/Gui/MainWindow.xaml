<reactiveui:ReactiveWindow 
        x:Class="AridityTeam.BetaFortressSetup.Gui.MainWindow"
        x:TypeArguments="vms:AppViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AridityTeam.BetaFortressSetup.Gui"
        xmlns:vms="clr-namespace:AridityTeam.BetaFortressSetup.Gui.ViewModels"
        xmlns:reactiveui="http://reactiveui.net" 
        mc:Ignorable="d"
        Title="Beta Fortress Client" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Closing="ReactiveWindow_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18.5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Name="QuitItem" Header="Quit Beta Fortress Client"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Name="EditBFConfigItem" Header="Edit config.cfg"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Name="ViewHelpItem" Header="View Help"/>
                <MenuItem Name="WhatsNewItem" Header="What's New"/>
                <Separator/>
                <MenuItem Name="AboutItem" Header="About Beta Fortress Client"/>
            </MenuItem>
        </Menu>
        <Grid Name="MainContent" Grid.Row="1">
            <Label Name="WelcomeLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"
               Content="Welcome to Beta Fortress Client!" FontSize="24"/>
            <Button Name="BtnInstall" VerticalAlignment="Top" HorizontalAlignment="Left"
                    Margin="10,65,0,0" Content="Install" Padding="25,2,25,2" Width="125"
                    IsEnabled="{Binding IsInstallEnabled}"/>
            <Button Name="BtnUpdate" VerticalAlignment="Top" HorizontalAlignment="Left"
                    Margin="10,95,0,0" Content="Update" Padding="25,2,25,2" Width="125"
                    IsEnabled="{Binding IsUpdateEnabled}"/>
            <Button Name="BtnUninstall" VerticalAlignment="Top" HorizontalAlignment="Left"
                    Margin="10,125,0,0" Content="Uninstall" Padding="25,2,25,2" Width="125"
                    IsEnabled="{Binding IsUninstallEnabled}"/>
        </Grid>
    </Grid>
</reactiveui:ReactiveWindow>
