<Window x:Class="AridityTeam.BetaFortressSetup.Gui.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AridityTeam.BetaFortressSetup.Gui"
        mc:Ignorable="d"
        Title="About Beta Fortress Client" Height="400" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Name="AppName"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               Margin="0,25,0,0"
               Content="Beta Fortress Client" FontSize="24" FontWeight="SemiBold"/>
        <Label Name="AppVer"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               Margin="0,60,0,0"
               Content="Version 1.0.0.0" FontSize="16"/>
        <Label Name="AppCopy"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               Margin="0,85,0,0"
               Content="Copyright © 2025 The Aridity Team, all rights reserved." FontSize="12"/>
        <Border BorderBrush="DarkGray" BorderThickness="1"
                VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,45"
                Width="375" Height="170">
            <ScrollViewer>
                <TextBlock Name="ThirdPartyTextList"
                           ScrollViewer.VerticalScrollBarVisibility="Auto"
                           ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                           Padding="4,0,4,0">
                    <Run FontWeight="Bold">Open Source components / libraries / code:</Run><LineBreak/>
                    <Hyperlink Click="ReactiveUI_Click">ReactiveUI</Hyperlink> <Run> by the ReactiveUI team </Run>
                    <Run>( </Run>
                    <Hyperlink Click="ReactiveUILicense_Click">MIT</Hyperlink>
                    <Run> )</Run><LineBreak/>
                    <Hyperlink Click="MSExtLogging_Click">Microsoft.Extensions.Logging</Hyperlink> <Run> by the .NET Foundation </Run>
                    <Run>( </Run>
                    <Hyperlink Click="MSExtLoggingLicense_Click">MIT</Hyperlink>
                    <Run> )</Run><LineBreak/>
                    <Hyperlink Click="Sentry_Click">Sentry</Hyperlink> <Run> by the Sentry team </Run>
                    <Run>( </Run>
                    <Hyperlink Click="SentryLicense_Click">MIT</Hyperlink>
                    <Run> )</Run><LineBreak/>
                    <Hyperlink Click="LibGit2Sharp_Click">LibGit2Sharp</Hyperlink> <Run> by the LibGit2Sharp contributors </Run>
                    <Run>( </Run>
                    <Hyperlink Click="LG2SLicense_Click">MIT</Hyperlink>
                    <Run> )</Run><LineBreak/>
                    <LineBreak/>
                    <Run FontWeight="Bold">Open Source binaries:</Run><LineBreak/>
                    <Run>none yet</Run>
                </TextBlock>
            </ScrollViewer>
        </Border>
        <Button Name="BtnClose" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Content="Close"
                Padding="4" Width="75" Click="BtnClose_Click"/>
    </Grid>
</Window>
