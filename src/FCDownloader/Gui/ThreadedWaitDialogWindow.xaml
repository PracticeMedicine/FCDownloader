<Window x:Class="AridityTeam.BetaFortressSetup.Gui.ThreadedWaitDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AridityTeam.BetaFortressSetup.Gui.Controls"
        mc:Ignorable="d"
        Title="ThreadedWaitDialogWindow" Height="131" Width="550" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False"
        Background="#FF232323" Foreground="White"
        Closing="Window_Closing" Closed="Window_Closed">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="0" CaptionHeight="0" CornerRadius="12"/>
    </WindowChrome.WindowChrome>
    <Window.Effect>
        <DropShadowEffect Color="Black" BlurRadius="20" Direction="-90" RenderingBias="Quality" ShadowDepth="4"/>
    </Window.Effect>
    <Grid>
        <Label Name="LblWaitMsg" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,30,0,0" Content="Hold on!" Foreground="White"/>
        <ProgressBar Name="ProgressBar" VerticalAlignment="Top" HorizontalAlignment="Left" Width="505" Height="15" Margin="10,55,0,0"
                     IsIndeterminate="True" 
                     Background="#FF151515"
                     Foreground="DeepSkyBlue"/>
        <Viewbox Name="CircularIndProgressBar" VerticalAlignment="Top" HorizontalAlignment="Right" Width="24" Height="24" Margin="0,50,5,0">
            <local:CircularProgressBar Foreground="White"/>
        </Viewbox>
    </Grid>
</Window>
