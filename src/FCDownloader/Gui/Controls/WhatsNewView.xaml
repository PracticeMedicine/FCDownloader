<reactiveui:ReactiveUserControl 
             x:Class="AridityTeam.BetaFortressSetup.Gui.Controls.WhatsNewView"
             x:TypeArguments="vm:WhatsNewViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:AridityTeam.BetaFortressSetup.Gui.ViewModels"
             xmlns:reactiveui="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="600" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Name="RelName" VerticalAlignment="Top" HorizontalAlignment="Left" Content="1.0.0 release"
               FontSize="24" FontWeight="SemiBold" Grid.Row="0"/>
        <Border BorderBrush="DarkGray" BorderThickness="1" Grid.Row="1">
            <Grid>
                <TextBlock Name="RelNotesContent" TextWrapping="WrapWithOverflow">
                    <Run Name="textRun"/> <LineBreak/>
                </TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="WrapWithOverflow">
                    <Hyperlink Name="RelNotesLink">View more about this release</Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</reactiveui:ReactiveUserControl>
