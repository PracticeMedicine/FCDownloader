<Window x:Class="AridityTeam.BetaFortressSetup.Gui.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AridityTeam.BetaFortressSetup.Gui"
        xmlns:actxt="http://wpfcontrols.com/"
        mc:Ignorable="d"
        Title="Developer Console" Height="450" Width="800"
        Background="#FF232323" Foreground="White"
        Loaded="Window_Loaded">
    <Grid>
        <TextBox Name="OutputText"
                 Background="#FF171717" Foreground="White" SelectionBrush="#FF00C8FF" 
                 Margin="10,10,10,42" IsReadOnly="True"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.IsDeferredScrollingEnabled="False"
                 TextChanged="OutputText_TextChanged"/>
        <TextBox Name="CommandInput" VerticalAlignment="Bottom" Margin="10,0,106,10"
                 Background="#FF171717" Foreground="White" Height="20" KeyDown="CommandInput_KeyDown"/>
        <Button Name="CommandInEnterBtn" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="0,0,10,10" Content="Enter" Width="91" Click="CommandInEnterBtn_Click"/>
    </Grid>
</Window>
