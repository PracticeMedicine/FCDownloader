<Window x:Class="AridityTeam.BetaFortressSetup.Gui.IDEWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AridityTeam.BetaFortressSetup.Gui"
        xmlns:av="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="AridIDE Embdedded" Height="450" Width="800"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18.5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Quit"/>
            </MenuItem>
        </Menu>
        <av:TextEditor Name="EditorView" Grid.Row="1"/>
    </Grid>
</Window>
